/* theme */

body.theme-ic h1 {font-size:1.5em;padding:2px 4px;}
body.theme-ic h1 span {;padding:2px 4px;}

body.theme-ic h4 {font-size:1.2em;font-weight:bold;}


div#crumbs {display:none;}

div.icbox#box_stages{border:0px solid #a5d867;padding:0px 0px;;margin:10px 0;zoom:1;

background: url(/assets/gfx/infocentre/infobox_middle.gif)  top right;

}
div.icbox#box_stages .icbox_top {
background:url(/assets/gfx/infocentre/infobox_top.gif) no-repeat top right;
}
div.icbox#box_stages .icbox_bottom {
background: url(/assets/gfx/infocentre/infobox_base.gif) no-repeat bottom right;padding:3px 0;
}


div.icbox{/*border:1px solid #a5d867;*/padding:0px;/*background-color:#eeedde;*/margin:05px 0 5px 0;zoom:1}


div.icbox p {padding:0;margin:10px;font-weight:bold;}
div.icbox legend {display:none;}
div.icbox input {float:left;margin:0;padding:0;height:21px;margin-right:10px;border:1px solid #9b9a95;width:100px}
div.icbox input.formIMAGE {height:auto;border:0;width:auto;margin-right:0;float:right;}

div.icbox fieldset {background:url(/assets/gfx/infocentre/search_box.gif) 0 2px  no-repeat;position:relative;height:40px;padding:0;}
div.icbox input.searchTEXT {position:absolute;left:5px;top:9px;width:105px;float:none;margin:0;height:15px;border:1px solid white;}
div#box_words.icbox input.searchTEXT {width:125px;}
div#box_words.icbox input.formIMAGE {position:absolute;left:140px;top:2px;float:none;margin:0;width:140px;height:37px}
div#box_search.icbox input.formIMAGE {position:absolute;left:115px;top:2px;float:none;margin:0;width:154px;height:37px}


div#box_words {float:left;width:48%;}
div#box_search {float:right;width:48%;}
div#box_stages {clear:both;}

dl.results dt {;margin: 0;padding:10px 12px 3px;}
dl.results dd {;margin:0;padding:0 12px;}

div#box_stages div.ulwrapper {margin:0px 10px 0px 0px;;background:url(/assets/gfx/infocentre/bg_gfx_left.jpg) top left  no-repeat;;float:left;}

div#box_stages div.ulwrapper.stage_x {float:right;;width:463px}
div#box_stages div.ulwraxpper.stage_0 {width:90px;float:left;}


div#box_stages ul {padding:5px 10px 0;list-style:none;background:url(/assets/gfx/infocentre/bg_gfx_right.jpg) top right  no-repeat;line-height:33px;height:33px;margin:0;;}
div#box_stages ul li {list-style:none;padding:0px;margin:0 1px;float:left;}

div#box_stages li,
div#box_stages li a {background-image:url(/assets/gfx/infocentre/coloured_button.jpg);background-position:0 0;background-repeat:no-repeat;;width:19px;height:25px;display:block;margin:0;padding:0;font-size:1px;text-indent:-909999px;overflow:hidden;}


div#box_stages ul li.li_active ,
div#box_stages ul li.li_active a,
div#box_stages ul li a:hover {background-position:0 -25px;}


div#box_stages  p {clear:both;color:#666;font-weight:bold;margin:0;padding:0;text-align:center;}
div#box_stages  p em {color:#000;font-style:normal;padding-right:20px}
div#box_stages  h4 {color:#000;font-style:normal;margin:0;padding:2px 0 0 8px;;font-size:1.2em;display:block;}

div #sub-nav h3.heading_stagestopics {padding:10px 10px 0 10px;margin:0;font-size:1.1em;font-weight:bold}
div #sub-nav ul.list_stagestopics  {padding: 10px!important;margin:0!important;}
ul.list_stagestopics li {padding:1px 3px;border-bottom:1px solid #d4d4ca;}

#tooltip {
	position: absolute;
	z-index: 3000;
	border: 1px solid #111;
	background-color: #58126b;
	padding: 3px 5px;
	-moz-border-radius-bottomleft:8px;
-moz-border-radius-bottomright:8px;
-moz-border-radius-topleft:8px;
-moz-border-radius-topright:8px;
}
#tooltip h3 {font-size:1em;font-weight:bold;color:#fff;}
#tooltip h3, #tooltip div { margin: 0; }

ul#ic-tools {margin:0;padding:0;list-style:none;border-bottom:2px solid #cccccc;height:35px;}
ul#ic-tools li {margin:0;padding:0;list-style:none;float:left;display:block;width:25%;background-position:center;background-repeat:no-repeat;}
ul#ic-tools li a {margin:0;padding:0;list-style:none;display:block;width:100%;background-position:center;background-repeat:no-repeat;height:27px;overflow:hidden;text-indent:-99999px;font-size:1px;}


ul#ic-tools li#button-412{width:144px;}
ul#ic-tools li#button-412,
ul#ic-tools li#button-412 a {background-image:url(/assets/gfx/infocentre/btn_how_doi.gif);;}

ul#ic-tools li#button-413{width:144px;}
ul#ic-tools li#button-413,
ul#ic-tools li#button-413 a {background-image:url(/assets/gfx/infocentre/btns_decisions.gif);}

ul#ic-tools li#button-414{width:144px;}
ul#ic-tools li#button-414,
ul#ic-tools li#button-415 a {background-image:url(/assets/gfx/infocentre/btn_information.gif);}



ul#ic-tools li#button-415{width:144px;}
ul#ic-tools li#button-415,
ul#ic-tools li#button-415 a {background-image:url(/assets/gfx/infocentre/btn_getting_help.gif);}

div#box_viewed {width:285px;float:right;}
div#box_popular {width:285px;float:left;}
div#box_popular ul,div#box_viewed ul{margin: 0; padding: 0; list-style:none;}
div#box_popular li,div#box_viewed li {padding: 0.25em 0.75em}
div#box_popular h3,div#box_viewed h3 {height: 42px; margin-bottom: 0; background-image: url(/assets/gfx/infocentre/infobox_poptop.gif); background-position:bottom; background-repeat:no-repeat;}
div#box_popular h3 span,div#box_viewed h3 span {padding-left: 0.5em}
div#box_popular .con,div#box_viewed .con {background-color: #eeedde; background-image:url(/assets/gfx/infocentre/infobox_popmiddle.gif)}
div#box_popular,div#box_viewed {background-image:url(/assets/gfx/infocentre/infobox_popbase.gif); background-position:bottom; padding-bottom:18px; background-repeat:no-repeat;}


